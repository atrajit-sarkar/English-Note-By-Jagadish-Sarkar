{
  "editor.acceptSuggestionOnEnter": "off",
  "editor.inlineSuggest.enabled": false,
  "github.copilot.enable": {
    "*": false,
    "plaintext": false,
    "markdown": false,
    "scminput": false,
    "latex": false
  },
  "editor.suggest.showSnippets": true,

  "[latex]": {
    "editor.inlineSuggest.enabled": false
  },

  // -------- LaTeX Workshop: RECIPES --------
  "latex-workshop.latex.recipes": [
    {
      // Fast, realtime-ish build (no explicit biber call; latexmk decides)
      "name": "Fast LuaLaTeX (latexmk)",
      "tools": [
        "latexmk-lua"
      ]
    },
    {
      // Full build with bibliography, use when you need final PDF
      "name": "lualatex -> biber -> lualatex√ó2",
      "tools": [
        "lualatex",
        "biber",
        "lualatex",
        "lualatex"
      ]
    }
  ],

  // -------- LaTeX Workshop: TOOLS --------
  "latex-workshop.latex.tools": [
    {
      "name": "lualatex",
      "command": "lualatex",
      "args": [
        "-synctex=1",
        "-interaction=nonstopmode",
        "-file-line-error",
        "%DOCFILE%"
      ]
    },
    {
      // latexmk driving lualatex (fast incremental builds)
      "name": "latexmk-lua",
      "command": "latexmk",
      "args": [
        "-synctex=1",
        "-interaction=nonstopmode",
        "-file-line-error",
        "-pdf",
        "-lualatex",
        "%DOC%"
      ]
    },
    {
      "name": "biber",
      "command": "biber",
      "args": [
        "%DOCFILE%"
      ]
    }
  ],

  // -------- Build behaviour / "realtime" feel --------
  // Build as you type (can be heavy on huge docs; change to "onSave" if needed)
  "latex-workshop.latex.autoBuild.run": "onFileChange",

  // Optional: make VS Code save automatically so "onSave" feels realtime
  // "files.autoSave": "afterDelay",
  // "files.autoSaveDelay": 1000
}
